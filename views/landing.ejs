    </head>
    <body>
    
    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
    <div id="landing-header">
 		<h1><i class="fa fa-free-code-camp"> Welcome to YelpCamp!</i></h1>
		<a href="/campground" class="btn btn-lg btn-success"><i class="fa fa"> View All Campgrounds</i></a>
    </div>
    
    <ul class="slideshow">
      <li></li>
