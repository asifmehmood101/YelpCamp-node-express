<%-include('partials/header')%>

<div class="container">
    <header class="jumbotron jumbo">
        <div class="container">
        <h1><b><i class="fa fa-free-code-camp"> Welcome to YelpCamp!</i></b></h1>
        <p>view our hand-picked campground from all over the world</p>
        <p>
            <!-- <a class="btn btn-" href="/campground/new">Add New campground</a> -->
            <a class="btn btn-info btn-lg" href="/campground/new"><i class="fa fa-plus"> Add New campground</i></a>
        </p>
    </div>
    </header>
    
    
    <div class="container">
        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <%camp.forEach(function(camp){%>
                <div class="col-md-3 col-sm-6" style="padding: 1%;">
                    <div class="img-thumbnail"> 
                        <img src="<%=camp.image%>" alt="Campground view">
                        <div class="figure-caption">
                            <h4><%=camp.name%></h4> 
                            <a class="btn btn-info btn-sm" href="/campground/ <%=camp._id%> ">More Info</a>
                        </div>
                    </div>
                    
             </div>
                
        <%})%>
        </div>
    </div>
    
    
</div>

<%-include('partials/footer')%>