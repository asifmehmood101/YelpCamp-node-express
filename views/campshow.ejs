<%-include('partials/header')%>

<div class="container">
<div class="row">
        <div class="col-md-3">
                <p class="lead">YelpCamp</p>
                <div class="list-group">
                        <li class="list-group-item active">info-1</li>
                        <li class="list-group-item">info-2</li>
                        <li class="list-group-item">info-3</li>     
                </div>
        </div>
        <div class="col-md-9">
                <div class="img-thumbnail border-light">
        
                        <img class="rounded mx-auto d-block" src="<%=Campground.image%>" alt="">
                        <div class="caption-full">
                                <h5 class="float-right">$<%=Campground.Price%>/night</h5>
                                <a href=""></a><h5><%=Campground.name%></h5></a>
                                <p><%=Campground.description%></p>
                                <p><em>Submitted by</em> <a href=""><%= Campground.author.username%></a></p>
                                <%if(Currentuser && Campground.author.id.equals(Currentuser._id)){%>
                                <a  class="btn btn-info btn-sm" href="/campground/<%=Campground._id%>/edit">Edit</a>
                                <form class="btn-form" action="/campground/<%= Campground._id%>?_method=delete" method="post">
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                </form>
                        <%}%>
                        
                        </div>
                </div>
                <br>
                <br>    
                <div class="card border-light">
                        <div class="card-header">Comments</div>
                <div class="card-body">
                        <div class="text-right">
                        <a class="btn btn-success" href="/campground/<%=Campground._id%>/comments/new">Add comment</a> 
                        </div>
                        <hr>
                                <%Campground.comments.forEach(function(comment){%>
                                        <div class="row"></div>
                                                <div class="col-md-12">
                                                <b><a href=""><%=comment.author.username%></a></b>
                                                <span class="float-right text-secondary">10 days ago</span>
                                                <p><%=comment.text%></p>
                                                <%if(Currentuser && comment.author.id.equals(Currentuser._id)){%>
                                                <a class="btn btn-sm btn-danger"href="/campground/<%=Campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                                <form class="btn-form" action="/campground/<%=Campground._id%>/comments/<%=comment._id%>?_method=delete" method="post">
                                                        <input class="btn btn-sm btn-warning"  type="submit" value="Delete">
                                                </form>
                                                <% }%>
                                                </div>
      
                                <%})%>
                                </div>
                        </div>
                </div>
                </div>
        </div>
</div>



</div>


<%-include('partials/footer')%>
  



