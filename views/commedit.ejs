<%-include('partials/header')%>

<div class="container">

        <header class="jumbotron">
            <h1 style="text-align: center;">Edit Comment on <%=comm.name%></h1>
        </header> 
       
        <div style="width: 30%; margin: auto;">
            <form action="/campground/<%= campid %>/comments/<%=comm._id%>?_method=put" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comm.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-lg btn-block">Submit</button>
                </div>
                <a href="/campground" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Go Back</a>
            </form>
        </div>
        
</div>


<%-include('partials/footer')%>