<%-include('partials/header')%>

<div class="container">

        <header class="jumbotron">
            <h1 style="text-align: center;"><i class="fa fa-edit"> Edit <b><%=campz.name%></b></i></h1>
        </header> 
       
        <div class="card w-50 reg card1">
            <div class="card-body">
                <form action="/campground/<%= campz._id %>?_method=put" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-9">
                            <label for="exampleInputEmail1"><b>Campground Name</b></label>
                            <input class="form-control" type="text" name="campground[name]" value="<%=campz.name%>">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-9">
                            <label for="exampleInputEmail1"><b>Campground image</b></label>
                            <input class="form-control" type="text" name="campground[image]" value="<%=campz.image%>">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-9">
                            <label for="exampleInputEmail1"><b>Campground Price</b></label>
                            <input class="form-control" type="number" name="campground[Price]" value="<%=campz.Price%>" min="1" step="1">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-9">
                            <div class="form-group">
                                <label for="exampleInputEmail1"><b>Campground Description</b></label>
                                <textarea class="form-control" type="text" name="campground[description]" value="<%=campz.description%>"></textarea>
                            </div>
                        </div>
                        
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-info btn-lg">Update</button>
                    </div>
                    <a href="/campground" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Go Back</a>
                </form>
            </div>
            
        </div>
            

</div>


<%-include('partials/footer')%>